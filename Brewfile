## Brewfile for Homebrew. A load of commands for Homebrew to do
## To run this file use:
##  brew bundle Brewfile

# Bash
install bash
install bash-completion

# ZSH
install zsh
install zsh-lovers
install zsh-completions
install zsh-syntax-highlighting

# Basics
install cowsay
install freetype
install gist
install gpg2
install mobile-shell
install nmap
install nodejs
install s3cmd
install tmux
install watch
install wget

# DB
install mysql
install postgresql
install couchdb
install mongo

# Git
install git
install git-flow
install git-extras
install hub

# Node
install node

# Ruby
install ruby-build
install rb-env
install pow

# Python
install python

# Cloudy future
install heroku

# Libs
install zmq